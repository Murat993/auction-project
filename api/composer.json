{
  "name": "murat-nysambaev/demo-auction",
  "type": "project",
  "license": "BSD-3-Clause",
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": "^7.4",
    "ext-json": "^7.4",
    "php-di/php-di": "^6.0",
    "slim/psr7": "^1.3",
    "slim/slim": "^4.3",
    "symfony/console": "^5.0"
  },
  "require-dev": {
    "overtrue/phplint": "^1.2",
    "squizlabs/php_codesniffer": "^3.5",
    "roave/security-advisories": "dev-master",
    "vimeo/psalm": "^3.8"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "lint": "phplint",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "psalm": "psalm",
    "app": "php bin/app.php --ansi"
  }
}
